<h1>Listing words</h1>

<table>
  <tr>
    <th>Text</th>
    <th>Stem</th>
    <th>Count</th>
    <th>Deleted</th>
    <th>Cloud</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @words.each do |word| %>
  <tr>
    <td><%= word.text %></td>
    <td><%= word.stem %></td>
    <td><%= word.count %></td>
    <td><%= word.deleted %></td>
    <td><%= word.cloud %></td>
    <td><%= link_to 'Show', word %></td>
    <td><%= link_to 'Edit', edit_word_path(word) %></td>
    <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Word', new_word_path %>
<br/>
<%= link_to "Back to #{params[:cloud]}", {:action=>"index", :controller=>"cloud", :cloud=> params[:cloud]} %>

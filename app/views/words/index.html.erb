<h1>Listing Clouds</h1>
<table>
<% @clouds.each do |cloud| %>
    <tr>
        <td><%= cloud.cloud %></td>
        <td><%= link_to cloud.cloud, {:action=>"index", :controller=>"cloud", :cloud=> cloud.cloud} %></td>
    </tr>
<% end %>
</table>
<br/>

<h1>Listing words</h1>

<table>
  <tr>
    <th>Text</th>
    <th>Count</th>
    <th>Deleted</th>
    <th>Cloud</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @words.each do |word| %>
  <tr>
    <td><%= word.text %></td>
    <td><%= word.count %></td>
    <td><%= word.deleted %></td>
    <td><%= word.cloud %></td>
    <td><%= link_to 'Show', word %></td>
    <td><%= link_to 'Edit', edit_word_path(word) %></td>
    <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

